{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Screen Template Schema",
  "type": "object",
  "required": [
    "screen_template_id",
    "name",
    "state",
    "title",
    "label",
    "description",
    "components"
  ],
  "properties": {
    "screen_template_id": { "type": "string" },
    "name": { "type": "string" },
    "state": { "type": "string" },
    "title": { "type": "string" },
    "label": { "type": "string" },
    "description": { "type": "string" },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "screen_template_id",
          "name",
          "state",
          "title",
          "label",
          "description",
          "component"
        ],
        "properties": {
          "screen_template_id": { "type": "string" },
          "name": { "type": "string" },
          "state": { "type": "string" },
          "title": { "type": "string" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "component": {
            "type": "object",
            "required": ["type", "validation"],
            "properties": {
              "type": { "type": "string" },
              "validation": { "type": ["object", "string"] }
            }
          },
          "tips": { "type": "string" },
          "internal_reference": { "type": "string" },
          "small_print": { "type": "string" },
          "conditional_navigation": { "type": "string" },
          "options": { "type": "string" },
          "default_value": { "type": "string" },
          "min_value": { "type": "string" },
          "max_value": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
} 